{
  "compileOnSave": true,
  "compilerOptions": {
    "noImplicitAny": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "mapRoot": "./",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "../dist/out-tsc",
    "sourceMap": true,
    "removeComments": true,
    "target": "es5",
    "typeRoots": [
      "../node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "assets/*": [
        "app/assets/*"
      ],
      "core/*": [
        "app/core/*"
      ],
      "content/*": [
        "app/content/*"
      ],
      "booking-funnel/*": [
        "app/booking-funnel/*"
      ]
    }
  }
}
